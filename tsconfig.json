{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "lib": ["ESNext"],
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "./src",
    "bin",
    "./types"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}